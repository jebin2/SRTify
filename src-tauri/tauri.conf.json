{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "SRTify",
	"version": "0.1.0",
	"identifier": "com.srtify.app",
	"build": {
		"beforeBuildCommand": "chmod +x src-tauri/bin/linux-x64/ffmpeg && chmod +x src-tauri/bin/macos-x64/ffmpeg",
		"frontendDist": "../src"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "SRTify",
				"width": 1280,
				"height": 720
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
        	"bin/**/*"
      	]
	}
}